<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/account"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_back"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center|top"
        android:text="用支付宝付车费吧"
        android:textColor="@color/orange"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:text="简单快捷,安全可靠"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15.0dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="车费"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_putmoney"
            android:layout_width="230dip"
            android:layout_height="45.0dip"
            android:layout_marginLeft="1dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/button_white"
            android:hint="请输入代驾金额"
            android:maxLength="30"
            android:numeric="integer"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="10dip"
            android:gravity="center"
            android:text="元"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="25dip"
        android:gravity="center_horizontal"
        android:text="支付后返回客户端,得分享红包"
        android:textColor="@color/orange"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/pay"
        style="@style/btn_gray"
        android:layout_margin="10dip"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="20dp"
        android:text="确认支付" />

    <Button
        android:id="@+id/btn_xianjin"
        style="@style/btn_white"
        android:layout_margin="10dip"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="我已现金支付" />

</LinearLayout>