<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <ImageView
        android:id="@+id/imgv"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/imgv"
        android:text="this is titile"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/video_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/imgv"
        android:text="--"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/video_time_long"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:text="--"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/play"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/play" />

    <ImageView
        android:id="@+id/video_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imgv"
        android:layout_alignTop="@+id/imgv"
        android:layout_margin="4dip"
        android:scaleType="fitXY"
        android:src="@drawable/video_nochoose" />

</RelativeLayout>