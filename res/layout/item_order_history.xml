<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_money"
                style="@style/font16_white"
                android:background="@drawable/blue_ordermoneybg"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:gravity="center"
                android:text="89元" >
            </TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="5dip"
            android:background="#D4D4D4"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_time"
                style="@style/font16_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="3dip"
                android:text="时间："
                 >
            </TextView>

            <TextView
                android:id="@+id/tv_dingdanhao"
                style="@style/font16_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="3dip"
                android:text="订单号" >
            </TextView>

            <TextView
                android:id="@+id/tv_from"
                style="@style/font16_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="3dip"
                android:text="出发地点" >
            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="3dip"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_to"
                    style="@style/font16_black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="目的地：" >
                </TextView>
            <!--   
                <Button 
                    android:id="@+id/bt_address"
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:focusable="false"
                    android:background="@drawable/location"/>
                    -->
            </RelativeLayout>

            

            <!-- <TextView
                android:id="@+id/tv_beizhu"
                style="@style/font16_black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:layout_marginTop="3dip"
                android:text="备注：" >
            </TextView> -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dip"
                android:orientation="horizontal" >


                <TextView
                    android:id="@+id/bt_pingjia"
                    style="@style/font18_white"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginRight="8dip"
                    android:gravity="center"
                    android:focusable="false"
                    android:text="评论" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#D4D4D4"
        />

</LinearLayout>