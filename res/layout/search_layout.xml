<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whit"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/headview"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/back" />

        <LinearLayout
            android:layout_width="220dip"
            android:layout_height="30dip"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/keywords"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="3dp"
                    android:paddingTop="1dip"
                    android:text="景点 " />

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="15dip"
                    android:layout_marginLeft="3dip"
                    android:layout_marginTop="2dip"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/keywords_edit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dip"
                android:layout_gravity="center"
                android:layout_marginLeft="6dip"
                android:background="@null"
                android:gravity="left|center"
                android:hint="请输入关键字"
                android:imeOptions="actionSearch"
                android:paddingBottom="-15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black" />
            <ImageView 
                android:layout_gravity="center_vertical"
                android:id="@+id/search_layout_voiceinput"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="6dp"
                android:src="@drawable/search_voice"
                android:scaleType="fitXY"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/side_menu_classes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
           />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/headview"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/interface_viewpager_layout"
                android:layout_width="fill_parent"
                android:isScrollContainer="false"
                android:layout_height="190dip"
                android:layout_margin="10dip"
                android:visibility="gone" >

                <android.support.v4.view.ViewPager
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:isScrollContainer="false"
                    android:id="@+id/interface_viewpager"
                    android:layout_width="fill_parent"
                    android:layout_height="160dip"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center" />

        
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/history_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/interface_viewpager_layout"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone" >

                <com.dajia.view.myListView
                    android:id="@+id/history_list"
                    style="@style/list_view_no_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >
                </com.dajia.view.myListView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>