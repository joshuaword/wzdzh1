<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_status_view"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/edaijia_gray" />

    <LinearLayout
        android:id="@+id/call_layout"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/order_back_view"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:background="@drawable/order_status_back_start"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:gravity="center"
                android:text="22:00"
                android:textSize="16.0sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="center"
                android:text="开始"
                android:textColor="@color/white"
                android:textSize="13.0sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="50.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/view_call_driver"
                android:layout_width="fill_parent"
                android:layout_height="30.0dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_status_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:textSize="15.0sp" />

                <ImageView
                    android:id="@+id/img_call_driver"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:visibility="gone"
                    android:layout_gravity="left|center"
                    android:src="@drawable/order_status_view_icon_call" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_status_content"
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:layout_marginTop="-3.0dip"
                android:gravity="top|left|center"
                android:text="正在为你联络司机"
                android:textColor="@color/black"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>