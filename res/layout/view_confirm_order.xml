<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/confirmOrderInfo"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:background="@color/edaijia_mask"
        android:clickable="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <View style="@style/gray_line_horizontal" />

        <TextView
            android:id="@+id/confirmOrderInfo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:gravity="center"
            android:text="代叫司机"
            android:textColor="@color/c333"
            android:textSize="20.0dip" />

        <View
            style="@style/gray_line_horizontal"
            android:layout_gravity="top" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10.0dip"
                android:gravity="center_vertical"
                android:text="需要司机："
                android:textColor="@color/c666"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/confirmOrderInfo_driver"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:gravity="center_vertical"
                android:text="需要司机（1名）"
                android:textColor="@color/c333"
                android:textSize="20.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="联系电话："
                android:textColor="@color/c666"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/confirmOrderInfo_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4.0dip"
                android:gravity="center"
                android:text="2013年1月1日 22：00"
                android:textColor="@color/c333"
                android:textSize="16.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:text="下单地址："
                android:textColor="@color/c666"
                android:textSize="16.0dip" />

            <TextView
                android:id="@+id/confirmOrderInfo_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="4.0dip"
                android:gravity="center_vertical"
                android:text="北京市朝阳区洛娃大厦"
                android:textColor="@color/c333"
                android:textSize="16.0dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="20.0dip"
            android:gravity="center" >

            <Button
                android:id="@+id/confirmOrderInfo_btn_confirm"
                style="@style/btn_blue"
                android:layout_width="200.0dip"
                android:layout_height="45.0dip"
                android:text="确认订单（5）" />

            <Button
                android:id="@+id/confirmOrderInfo_btn_cancel"
                style="@style/btn_white"
                android:layout_width="0.0dip"
                android:layout_height="45.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="1.0"
                android:text="取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>