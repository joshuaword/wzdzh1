<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/home_top"
        style="@style/navi_bar" >

        <FrameLayout
            android:id="@+id/fra"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5.0dip" >

            <Button
                android:id="@+id/homebtnLeft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/message_point"
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:layout_gravity="top|right|center"
                android:background="@drawable/red_ci"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/btnleft_point"
                android:layout_width="12.0dip"
                android:layout_height="12.0dip"
                android:layout_gravity="top|right|center"
                android:layout_marginRight="8.0dip"
                android:layout_marginTop="8.0dip"
                android:background="@drawable/icon_point"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="本地视频"
            android:maxLength="12"
            android:ellipsize="middle"
            android:textColor="#228dce"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/homecity_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip" >

            <ImageView
                android:id="@+id/currentcity_txt"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:text="返回"
                android:visibility="gone"
                android:src="@drawable/search_r"
                android:textColor="#228dce"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <com.dajia.activity.NoScrollGridView
        android:id="@+id/shipin_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_layout"
        android:layout_below="@+id/home_top"
        android:horizontalSpacing="5dip"
        android:numColumns="3"
        android:verticalSpacing="5dip" >
    </com.dajia.activity.NoScrollGridView>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
              android:id="@+id/btn_yulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/font14_white"
            android:layout_weight="1"
           android:layout_margin="10dip"
           android:visibility="gone"
            android:text="视频预览" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:layout_weight="1"
            style="@style/font14_white"
            android:background="@color/blue1"
            android:text="视频上传" />
    </LinearLayout>

</RelativeLayout>