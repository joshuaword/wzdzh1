<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_ui" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginTop="10dip"
        android:background="@color/whit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:text="订单号:"
            android:textColor="#111111"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/codrernum_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="5dip"
            android:text="1129"
            android:textColor="#111111"
            android:textSize="18.0sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginTop="20dip"
        android:background="@color/whit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="5dip"
            android:text="总金额:"
            android:textColor="#111111"
            android:textSize="20.0sp" />

        <TextView
            android:id="@+id/odrertoalpay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="29"
            android:textColor="@color/orange"
            android:textSize="30.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:background="@color/whit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:text="实际支付:"
            android:textColor="#111111"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/truepay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="29"
            android:textColor="#111111"
            android:textSize="18.0sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@color/divide_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35.0dip"
        android:layout_marginTop="10dip"
        android:background="@color/whit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:text="出发地:"
            android:textColor="#111111"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/goaddress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="10dip"
            android:text="体育路"
            android:textColor="#111111"
            android:textSize="18.0sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/whit"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/arrivead_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="20dip"
            android:ellipsize="none"
            android:maxLines="100"
            android:text="体育路"
            android:textColor="#111111"
            android:textSize="18.0sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:background="@drawable/history_xiahualine" />

    <TextView
        android:id="@+id/comservicer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:text="服务您的跑腿员"
        android:textColor="#111111"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/view_pic_container"
            android:layout_width="60.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip" >

            <com.dajia.view.XCRoundRectImageView
                android:id="@+id/cimg_drivericon"
                style="@style/driver_picture"
                android:layout_width="60.0dip"
                android:layout_height="60.0dip"
                android:layout_gravity="bottom|center"
                android:src="@drawable/introduce2_11" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/layout_mid"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5.0dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/service_DriverName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:textColor="@drawable/text_driverlist_name_color"
                android:textSize="16.0sp" />

            <RatingBar
                android:id="@+id/driver_service_ratingBar"
                style="@style/OverlayRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="5dip"
                android:clickable="false"
                android:enabled="false"
                android:focusable="false"
                android:maxHeight="8.0dip"
                android:maxWidth="15.0dip" />

            <TextView
                android:id="@+id/driver_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dip"
                android:gravity="center_vertical|left"
                android:textColor="@drawable/text_driverlist_distance_color"
                android:textSize="13.0sp" />
        </LinearLayout>
    </LinearLayout>
    <!-- 显示图片    根据接口传的字段判断是否要显示 -->

    <LinearLayout
        android:id="@+id/shouphoto"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#969696" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_daijiaqian"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_daijiaqian"
                    style="@style/font18_black"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="代驾前" >
                </TextView>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#969696" />
            <!-- 代驾后 -->

            <LinearLayout
                android:id="@+id/layout_daijiahou"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_daijiahou"
                    style="@style/font18_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="代驾后" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#969696" />
        <!-- 滑动图片 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_picture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>