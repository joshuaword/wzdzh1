<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_back"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_ui" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:background="@color/white"
            android:orientation="vertical" >

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/name"
                    style="@style/input_right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_weight="1.0"
                    android:text="" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/phone_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="手机号码" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:text="" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/sex_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="性别" />

                <TextView
                    android:id="@+id/sex"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:text="男" />

                <Button
                    android:id="@+id/btn_vip_go"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            <View style="@style/gray_line_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:background="@color/white"
            android:orientation="vertical" >

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/carnum_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="车牌号" />

                <TextView
                    android:id="@+id/car_num"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/cartype_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="车型" />

                <TextView
                    android:id="@+id/car_type"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            <View style="@style/gray_line_horizontal" />

            <LinearLayout
                android:id="@+id/yaoqing_layout"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:visibility="gone"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="邀请码" />

                <TextView
                    android:id="@+id/yaoqingma"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false" />
            </LinearLayout>

            

            <LinearLayout
                android:id="@+id/login_id"
                android:layout_width="fill_parent"
                android:layout_height="50.0dip"
                android:background="@drawable/list_item_back"
                android:visibility="gone"
                android:gravity="center_vertical" >

                <TextView
                    style="@style/input_left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.0dip"
                    android:text="登录号" />

                <TextView
                    android:id="@+id/user_id"
                    style="@style/input_right_text"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="40dip"
                    android:layout_weight="1.0" />

                <Button
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:background="@drawable/btn_listright_setting"
                    android:clickable="false"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
        <View style="@style/gray_line_horizontal" />
         <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.0dip"
            android:orientation="horizontal" >
            
            <Button
                android:id="@+id/btn_exitlogin"
                style="@style/btn_blue"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="15.0dip"
                android:gravity="center"
                android:text="@string/exit_login" />   
            </LinearLayout>
    </LinearLayout>

</LinearLayout>