<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/net.k76.wzd"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/layout_base_ui" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:padding="10.0dip"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip" >

                    <TextView
                        android:id="@+id/text_orderdetail_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单号:13345657"
                        android:textColor="@color/c666"
                        android:textSize="14.0sp" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/separatorlinecolor" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip" >

                    <TextView
                        android:id="@+id/zongjine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总金额："
                        android:textColor="@color/c666"
                        android:textSize="18.0sp" />

                    <TextView
                        android:id="@+id/text_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥39"
                        android:textColor="#ffff6600"
                        android:textSize="50.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10.0dip" >

                    <TextView
                        android:id="@+id/text_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="left"
                        android:singleLine="true"
                        android:text="余额扣除:￥0"
                        android:textColor="@color/c666"
                        android:textSize="14.0sp" />

                
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0dip"
                    android:background="@color/separatorlinecolor" />

                <LinearLayout
                    android:id="@+id/history_order_trace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/view_goto_order_trace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="5.0dip"
                            android:paddingLeft="10.0dip"
                            android:paddingRight="10.0dip"
                            android:paddingTop="15.0dip" >

                            <TextView
                                android:id="@+id/text_startPosition"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text="南京市三山街地铁2号口"
                                android:textColor="@color/c666"
                                android:textSize="16.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingBottom="5.0dip"
                            android:paddingTop="5.0dip" >


                            <TextView
                                android:id="@+id/text_endPosition"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:singleLine="true"
                                android:text="南京市新街口2号地铁口中央商场"
                                android:textColor="@color/c666"
                                android:textSize="16.0sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:src="@drawable/list_rightsetting" />
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/historydetail_juchi" />

                <TextView
                    android:id="@+id/xiangqing6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:text="服务您的司机"
                    android:textColor="@color/c666"
                    android:textSize="18.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:padding="10.0dip" >

                    <com.dajia.view.RoundImageView
                        android:id="@+id/img_driver"
                        style="@style/driver_picture"
                        android:layout_width="60.0dip"
                        android:layout_height="60.0dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/introduce2_11" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip" >

                            <TextView
                                android:id="@+id/text_driverName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="朱清清"
                                android:textColor="@color/c333"
                                android:textSize="20.0sp" />

                        </LinearLayout>

                        <RatingBar
                            android:id="@+id/driver_rating"
                            style="@style/MyRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="10.0dip"
                            android:focusable="false"
                            android:isIndicator="true"
                            android:numStars="5" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginTop="10.0dip" >

                            <TextView
                                android:id="@+id/text_driverCount"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:text="d代驾:31次"
                                android:textColor="@color/c666"
                                android:textSize="14.0sp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <EditText
                    android:id="@+id/commentEdit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:hint="写点什么吧" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical" >

                    <RatingBar
                        android:id="@+id/ratingBar"
                        style="@style/CommentRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginTop="15.0dip"
                        android:numStars="5"
                        android:visibility="gone" />

                    <RatingBar
                        android:id="@+id/has_driver_rating"
                        style="@style/MyRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginTop="15.0dip"
                        android:focusable="false"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/text_info_giveRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="喜欢这个师傅就给他打5星吧"
                        android:textColor="@color/c666"
                        android:textSize="14.0sp" />

                    <Button
                        android:id="@+id/comment"
                        style="@style/btn_blue"
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:layout_gravity="center"
                        android:layout_margin="10.0dip"
                        android:text="评价" />
                </LinearLayout>

                <Button
                    android:id="@+id/guiji"
                    style="@style/btn_blue"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_gravity="center"
                    android:layout_margin="10.0dip"
                    android:text="轨迹" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="10dip"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            style="@style/btn_blue"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/btn_daijiaqian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="代驾前"
                                android:textColor="@color/whit"
                                android:textSize="16sp" >
                            </TextView>

                            <ImageView
                                android:id="@+id/img_daijiaqian"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:padding="10dip"
                                android:visibility="gone" >
                            </ImageView>
                        </LinearLayout>

                        <LinearLayout
                            style="@style/btn_blue"
                            android:layout_width="fill_parent"
                            android:layout_height="40dip"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dip"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/btn_daijiahou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="代驾后"
                                android:textColor="@color/blue"
                                android:textSize="16sp" >
                            </TextView>

                            <ImageView
                                android:id="@+id/img_daijiahou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dip"
                                android:padding="10dip"
                                android:visibility="gone" >
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/vp"
                android:layout_width="fill_parent"
                android:layout_height="200dip"
                android:layout_marginTop="10dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>